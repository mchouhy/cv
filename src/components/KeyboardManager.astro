---
import Footer from '@/components/Footer.astro';
---

<Footer />
<ninja-keys
  id="ninja-keys"
  placeholder="Search command"
  hideBreadcrumbs
  class=""
>
  <div slot="footer">
    <div
      class="modal-footer flex justify-center xsm:justify-start"
      slot="footer"
    >
      <div class="flex flex-col gap-1 xsm:gap-0 xsm:flex-row">
        <span class="help">
          <svg
            version="1.0"
            class="ninja-examplekey"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 1280 1280"
          >
            <path
              d="M1013 376c0 73.4-.4 113.3-1.1 120.2a159.9 159.9 0 0 1-90.2 127.3c-20 9.6-36.7 14-59.2 15.5-7.1.5-121.9.9-255 1h-242l95.5-95.5 95.5-95.5-38.3-38.2-38.2-38.3-160 160c-88 88-160 160.4-160 161 0 .6 72 73 160 161l160 160 38.2-38.3 38.3-38.2-95.5-95.5-95.5-95.5h251.1c252.9 0 259.8-.1 281.4-3.6 72.1-11.8 136.9-54.1 178.5-116.4 8.6-12.9 22.6-40.5 28-55.4 4.4-12 10.7-36.1 13.1-50.6 1.6-9.6 1.8-21 2.1-132.8l.4-122.2H1013v110z"
            ></path>
          </svg>
          to select
        </span>
        <span class="help">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="ninja-examplekey"
            viewBox="0 0 24 24"
          >
            <path d="M0 0h24v24H0V0z" fill="none"></path>
            <path
              d="M20 12l-1.41-1.41L13 16.17V4h-2v12.17l-5.58-5.59L4 12l8 8 8-8z"
            ></path>
          </svg>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="ninja-examplekey"
            viewBox="0 0 24 24"
          >
            <path d="M0 0h24v24H0V0z" fill="none"></path>
            <path
              d="M4 12l1.41 1.41L11 7.83V20h2V7.83l5.58 5.59L20 12l-8-8-8 8z"
            ></path>
          </svg>
          to navigate
        </span>
      </div>
      <div class="flex flex-col gap-1 xsm:gap-0 xsm:flex-row">
        <span class="help">
          <span class="ninja-examplekey esc">esc</span>
          to close
        </span>
        <span class="help">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="ninja-examplekey backspace"
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              d="M6.707 4.879A3 3 0 018.828 4H15a3 3 0 013 3v6a3 3 0 01-3 3H8.828a3 3 0 01-2.12-.879l-4.415-4.414a1 1 0 010-1.414l4.414-4.414zm4 2.414a1 1 0 00-1.414 1.414L10.586 10l-1.293 1.293a1 1 0 101.414 1.414L12 11.414l1.293 1.293a1 1 0 001.414-1.414L13.414 10l1.293-1.293a1 1 0 00-1.414-1.414L12 8.586l-1.293-1.293z"
              clip-rule="evenodd"></path>
          </svg>
          move to parent
        </span>
      </div>
    </div>
  </div>
</ninja-keys>
<script>
  import 'ninja-keys';
  const ninja = document.querySelector('ninja-keys');
  if (ninja !== null) {
    ninja.data = [
      {
        id: 'Print',
        title: 'Print',
        hotkey: 'ctrl+P',
        icon: `<svg
                style="margin-right: 6px" 
                height="16" 
                width="16" 
                xmlns="http://www.w3.org/2000/svg" 
                fill="none" 
                viewBox="0 0 24 24" 
                stroke-width="1.5"
                stroke="currentColor"
                >
                  <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M6.72 13.829c-.24.03-.48.062-.72.096m.72-.096a42.415 42.415 0 0 1 10.56 
                  0m-10.56 0L6.34 18m10.94-4.171c.24.03.48.062.72.096m-.72-.096L17.66 18m0 0 .229 
                  2.523a1.125 1.125 0 0 1-1.12 1.227H7.231c-.662 0-1.18-.568-1.12-1.227L6.34 18m11.318 
                  0h1.091A2.25 2.25 0 0 0 21 15.75V9.456c0-1.081-.768-2.015-1.837-2.175a48.055 48.055 
                  0 0 0-1.913-.247M6.34 18H5.25A2.25 2.25 0 0 1 3 15.75V9.456c0-1.081.768-2.015 1.837-2.175a48.041 48.041 
                  0 0 1 1.913-.247m10.5 0a48.536 48.536 0 0 0-10.5 0m10.5 0V3.375c0-.621-.504-1.125-1.125-1.125h-8.25c-.621 
                  0-1.125.504-1.125 1.125v3.659M18 
                  10.5h.008v.008H18V10.5Zm-3 0h.008v.008H15V10.5Z">
                  </path>
                </svg>`,
        section: 'Actions',
        handler: () => {
          window.print();
        }
      },
      {
        id: 'Theme',
        title: 'Theme',
        hotkey: 'ctrl+T',
        icon: `<svg
                id="theme-icon" 
                style="margin-right: 6px" 
                width="16" 
                height="16"
                xmlns="http://www.w3.org/2000/svg" 
                class="icon icon-tabler icon-tabler-brightness" 
                viewBox="0 0 24 24" 
                stroke-width="1.5" 
                stroke="currentColor" 
                fill="none" 
                stroke-linecap="round" 
                stroke-linejoin="round"
                >
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                  <path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" />
                  <path d="M12 3l0 18" />
                  <path d="M12 9l4.65 -4.65" />
                  <path d="M12 14.3l7.37 -7.37" />
                  <path d="M12 19.6l8.85 -8.85" />
                </svg>`,
        children: ['Light Theme', 'Dark Theme', 'System Theme'],
        section: 'Actions',
        handler: () => {
          ninja.open({ parent: 'Theme' });
          return { keepOpen: true };
        }
      },
      {
        id: 'Light Theme',
        title: 'Light mode',
        icon: `<svg 
                height="19" 
                width="19" 
                style="margin-right: 6px" 
                xmlns="http://www.w3.org/2000/svg" 
                class="icon icon-tabler icon-tabler-sun" 
                viewBox="0 0 24 24" 
                stroke-width="1.5" 
                stroke="currentColor" 
                fill="none" 
                stroke-linecap="round" 
                stroke-linejoin="round"
                >
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                  <path d="M12 12m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0" />
                  <path d="M3 12h1m8 -9v1m8 8h1m-9 8v1m-6.4 -15.4l.7 .7m12.1 
                  -.7l-.7 .7m0 11.4l.7 .7m-12.1 -.7l-.7 .7" />
                </svg>`,
        parent: 'Theme',
        handler: () => {
          document.documentElement.classList.remove('dark');
          document.getElementById('ninja-keys')?.classList.remove('dark');
        }
      },
      {
        id: 'Dark Theme',
        title: 'Dark mode',
        icon: `<svg
                style="margin-right: 10px" 
                width="16" 
                height="16" 
                xmlns="http://www.w3.org/2000/svg" 
                fill="none" 
                viewBox="0 0 24 24" 
                stroke-width="1.5" 
                stroke="currentColor" 
                >
                  <path 
                    stroke-linecap="round" 
                    stroke-linejoin="round" 
                    d="M21.752 15.002A9.72 9.72 0 0 1 18 15.75c-5.385 
                    0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 0 0 3 
                    11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 0 0 9.002-5.998Z" />
              </svg>`,
        parent: 'Theme',
        handler: () => {
          document.documentElement.classList.add('dark');
          document.getElementById('ninja-keys')?.classList.add('dark');
        }
      },
      {
        id: 'Linkedin',
        title: 'Linkedin',
        hotkey: 'ctrl+L',
        icon: `<svg 
                height="16" 
                width="16" 
                style="margin-right: 6px" 
                xmlns="http://www.w3.org/2000/svg" 
                class="icon icon-tabler icon-tabler-brand-linkedin" 
                viewBox="0 0 24 24" 
                stroke-width="1.5" 
                stroke="currentColor" 
                fill="none" 
                stroke-linecap="round" 
                stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                  <path d="M4 4m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z" />
                  <path d="M8 11l0 5" />
                  <path d="M8 8l0 .01" />
                  <path d="M12 16l0 -5" />
                  <path d="M16 16v-3a2 2 0 0 0 -4 0" />
                </svg>`,
        section: 'Social',
        handler: () => {
          window.open('https://www.linkedin.com/in/mchouhy/', '_blank');
        }
      },
      {
        id: 'Github',
        title: 'Github',
        hotkey: 'ctrl+G',
        icon: `<svg
                width="16"
                height="16"
                style="margin-right: 6px"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
                >
                  <title>GitHub</title>
                  <path
                    fill="currentColor"
                    d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 
                    11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 
                    17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 
                    3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 
                    0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 
                    1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 
                    3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 
                    5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 
                    22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"
                  >
                  </path>
                </svg>`,
        section: 'Social',
        handler: () => {
          window.open('https://github.com/mchouhy', '_blank');
        }
      }
    ];
  }
</script>
<style>
  @media print {
    ninja-keys {
      display: none;
    }
    footer {
      display: none;
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  footer {
    view-timeline: --revealing;
    view-timeline-axis: block;
    animation: linear 0.3s fadeIn;
    animation-timeline: --revealing;
    animation-range: entry 100% cover 10%;
  }

  ninja-keys {
    --ninja-accent-color: black;
  }

  .dark {
    --ninja-modal-background: #1e293b;
    --ninja-secondary-background-color: #020617;
    --ninja-selected-background: #182033;
    --ninja-footer-background: #182033;
    --ninja-secondary-text-color: #f1f5f9;
    --ninja-z-index: 50;
    --ninja-overflow-background: rgba(15, 23, 42, 0.5);
    --ninja-text-color: #f1f5f9;
    --ninja-placeholder-color: #f1f5f9;
    --ninja-group-text-color: #f1f5f9;
    --ninja-accent-color: #f1f5f9;
  }

  .modal-footer {
    background: var(--ninja-footer-background);
    padding: 0.5em 1em;
    display: flex;
    /* font-size: 0.75em; */
    border-top: var(--ninja-separate-border);
    color: var(--ninja-secondary-text-color);
  }

  .modal-footer .help {
    display: flex;
    margin-right: 1em;
    align-items: center;
    font-size: 0.75em;
  }

  .ninja-examplekey {
    background: var(--ninja-secondary-background-color);
    padding: 0.06em 0.25em;
    border-radius: var(--ninja-key-border-radius);
    color: var(--ninja-secondary-text-color);
    width: 1.5em;
    height: 1.5em;
    margin-right: 0.5em;
    font-size: 1.25em;
    fill: currentColor;
  }
  .ninja-examplekey.esc {
    width: auto;
    height: auto;
    font-size: 1.1em;
  }
  .ninja-examplekey.backspace {
    opacity: 0.7;
  }
</style>
