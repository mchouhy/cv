---
import { basics } from "@/cv";
import WorldMapSvg from "@/icons/WorldMapSvg.astro";
import MailSvg from "@/icons/MailSvg.astro";
import PhoneSvg from "@/icons/PhoneSvg.astro";
import LinkedInSvg from "@/icons/LinkedInSvg.astro";
import GithubSvg from "@/icons/GithubSvg.astro";
import Section from "@/components/Section.astro";
import SocialPill from "@/components/SocialPill.astro"

const { name, label, image, email, phone, location } = basics
---
<Section>
      <div class="flex justify-between">
            <div class="flex flex-col gap-y-1">
                  <h1 class="text-3xl font-semibold">{name}</h1>
                  <h2 class="text-xl font-medium text-[#444] text-wrap text-pretty">{label}</h2>
                  <span class="text-base font-normal text-[#666] flex items-center">
                        <WorldMapSvg />
                        {location.city}, {location.country}
                  </span>
                  <footer class="flex gap-2 mt-2">
                        <SocialPill href="">
                              <MailSvg />
                        </SocialPill>
                        <SocialPill href="">
                              <PhoneSvg />
                        </SocialPill>
                        <SocialPill href="">
                              <LinkedInSvg />
                        </SocialPill>
                        <SocialPill href="">
                              <GithubSvg />
                        </SocialPill>
                  </footer>
            </div>
            <figure>
                  <img src={image} alt="profile picture" class="aspect-square object-cover w-28 rounded-lg">
            </figure>
      </div>
</Section>
