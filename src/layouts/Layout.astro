---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html
  lang="en"
  class="font-mono tracking-tight bg-white dark:bg-slate-900 dark:text-slate-100"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon/memoji.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  a {
    text-decoration: none;
  }
  ul {
    list-style: none;
  }

  h1,
  h2,
  h3,
  h4,
  time {
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      'Segoe UI',
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      'Open Sans',
      'Helvetica Neue',
      sans-serif;
  }

  h1 {
    font-size: 1.875rem;
    line-height: 2.25rem;
    font-weight: 600;
  }

  h2 {
    font-size: 1.875rem;
    font-weight: 500;
  }

  h3 {
    font-size: 1.125rem;
  }

  p {
    color: #888;
    font-size: 0.9rem;
    line-height: 1.5;
    text-wrap: pretty;
  }
</style>
